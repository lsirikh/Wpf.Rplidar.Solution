	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Viewbox Grid.Row="0">
			<Canvas  Width="1000" Height="600" Background="#88000000" ClipToBounds="True">
				<Path Stroke="Black" StrokeThickness="1" Data="{Binding Geometry, UpdateSourceTrigger=PropertyChanged}">
					<Path.RenderTransform>
						<TransformGroup>
							<ScaleTransform ScaleX="-1"/>
							<TranslateTransform X="1000"/>
						</TransformGroup>
					</Path.RenderTransform>
				</Path>
				<Ellipse Width="10" Height="10" StrokeThickness="1"
						 Fill="Red"
						 Stroke="Red">
					<Ellipse.RenderTransform>
						<TranslateTransform X="500" 
											Y="300"/>
					</Ellipse.RenderTransform>
				</Ellipse>
			</Canvas>
		</Viewbox>
		<Grid Grid.Row="1">
			
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0"
					   Text="X Offset"
					   Style="{StaticResource TextBlockStyle}"/>
			<TextBox Grid.Column="1"
					 Style="{StaticResource TextBoxStyle}"
					 Text="{Binding XOffset, UpdateSourceTrigger=LostFocus}"/>
			<TextBlock Grid.Column="2"
					   Text="Y Offset"
					   Style="{StaticResource TextBlockStyle}"/>
			<TextBox Grid.Column="3"
					 Style="{StaticResource TextBoxStyle}"
					 Text="{Binding YOffset, UpdateSourceTrigger=LostFocus}"/>
			<TextBlock Grid.Column="4"
					   Text="Scale"
					   Style="{StaticResource TextBlockStyle}"/>
			<TextBox Grid.Column="5"
					 Style="{StaticResource TextBoxStyle}"
					 Text="{Binding Scale, UpdateSourceTrigger=LostFocus}"/>
		</Grid>
	</Grid>
</UserControl>
