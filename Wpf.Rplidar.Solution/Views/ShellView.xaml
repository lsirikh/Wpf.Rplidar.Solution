<Window x:Class="Wpf.Rplidar.Solution.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Rplidar.Solution.Views"
		xmlns:cal="http://caliburnmicro.com"
        mc:Ignorable="d"
        Title="ShellView" Height="800" Width="1000">
	<Window.Resources>
		<Style TargetType="TextBlock" x:Key="TextBlockStyle">
			<Setter Property="FontSize" Value="15" />
			<Setter Property="FontWeight" Value="Bold" />
			<Setter Property="Margin" Value="5"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>
		<Style TargetType="TextBox" x:Key="TextBoxStyle">
			<Setter Property="FontSize" Value="15" />
			<Setter Property="FontWeight" Value="Bold" />
			<Setter Property="Margin" Value="5"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="TextAlignment" Value="Center"/>
		</Style>
		<Style TargetType="Button" x:Key="ButtonStyle">
			<Setter Property="Margin" Value="5"/>
		</Style>
	</Window.Resources>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="RPLidar" FontSize="35" FontWeight="Bold" TextAlignment="Center"/>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0"
					   Text="COM"
					   Style="{StaticResource TextBlockStyle}"/>
			<TextBox Grid.Column="1"
					 Style="{StaticResource TextBoxStyle}"
					 Text="{Binding ComPort, UpdateSourceTrigger=LostFocus}"/>
			<TextBlock Grid.Column="2"
					   Text="Status"
					   Style="{StaticResource TextBlockStyle}"/>
			<TextBox Grid.Column="3"
					 Style="{StaticResource TextBoxStyle}"
					 Text="{Binding Status, UpdateSourceTrigger=LostFocus}"/>
			<Button Grid.Column="4"
					x:Name="ClickToConnect"
					Style="{StaticResource ButtonStyle}"
					Content="Connect"/>
			<Button Grid.Column="5"
					x:Name="ClickToDisconnect"
					Style="{StaticResource ButtonStyle}"
					Content="Disconnect"/>
		</Grid>
